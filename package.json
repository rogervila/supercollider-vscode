{
	"name": "supercollider-vscode",
	"description": "SuperCollider language server for Visual Studio Code",
	"author": "Roger Vil√† <rogervila@me.com>",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/rogervila/supercollider-vscode"
	},
	"publisher": "rogervila",
	"categories": [],
	"keywords": [],
	"engines": {
		"vscode": "^1.100.0"
	},
	"activationEvents": [
		"onLanguage:scd"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "scd",
				"extensions": [
					".scd"
				]
			}
		],
		"grammars": [
			{
				"language": "scd",
				"scopeName": "text.scd.basic",
				"path": "./syntaxes/scd.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm install && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^5.2.7",
		"@types/node": "^22",
		"eslint": "^9.13.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0"
	}
}
