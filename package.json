{
	"name": "supercollider-vscode",
	"description": "SuperCollider language server for Visual Studio Code",
	"author": "Roger Vil√† <rogervila@me.com>",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/rogervila/supercollider-vscode"
	},
	"publisher": "rogervila",
	"icon": "icon.png",
	"categories": [
		"Programming Languages",
		"Linters"
	],
	"keywords": [
		"supercollider",
		"scd",
		"sc",
		"audio",
		"music",
		"synthesis"
	],
	"engines": {
		"vscode": "^1.100.0"
	},
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "supercollider",
				"aliases": [
					"SuperCollider",
					"scd",
					"sc"
				],
				"extensions": [
					".scd",
					".sc"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "supercollider",
				"scopeName": "source.supercollider",
				"path": "./syntaxes/scd.tmLanguage.json"
			}
		],
		"configuration": {
			"type": "object",
			"title": "SuperCollider",
			"properties": {
				"supercollider.sclangPath": {
					"type": "string",
					"default": "sclang",
					"description": "Path to the sclang executable."
				}
			}
		},
		"commands": [
			{
				"command": "supercollider.executeBlock",
				"title": "SuperCollider: Execute Block"
			},
			{
				"command": "supercollider.bootServer",
				"title": "SuperCollider: Boot Server"
			},
			{
				"command": "supercollider.rebootServer",
				"title": "SuperCollider: Reboot Server"
			},
			{
				"command": "supercollider.killServer",
				"title": "SuperCollider: Kill Server"
			},
			{
				"command": "supercollider.stopAllSounds",
				"title": "SuperCollider: Stop All Sounds"
			},
			{
				"command": "supercollider.startSclang",
				"title": "SuperCollider: Start Language"
			},
			{
				"command": "supercollider.stopSclang",
				"title": "SuperCollider: Stop Language"
			}
		],
		"keybindings": [
			{
				"command": "supercollider.executeBlock",
				"key": "ctrl+enter",
				"mac": "cmd+enter",
				"when": "editorTextFocus && resourceLangId == supercollider"
			},
			{
				"command": "supercollider.executeBlock",
				"key": "shift+enter",
				"when": "editorTextFocus && resourceLangId == supercollider"
			},
			{
				"command": "supercollider.stopAllSounds",
				"key": "ctrl+.",
				"mac": "cmd+.",
				"when": "editorTextFocus"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm install && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd .."
	},
	"devDependencies": {
		"@eslint/js": "^9.13.0",
		"@stylistic/eslint-plugin": "^2.9.0",
		"@types/mocha": "^5.2.7",
		"@types/node": "^22",
		"@vscode/vsce": "^3.7.1",
		"eslint": "^9.13.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.39.0"
	}
}
